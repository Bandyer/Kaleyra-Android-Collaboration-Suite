<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/loginFragment">
    <fragment
        android:id="@+id/loginFragment"
        android:name="com.kaleyra.demo_collaboration_suite.LoginFragment"
        android:label="fragment_login"
        tools:layout="@layout/fragment_login" >
        <action
            android:id="@+id/action_loginFragment_to_callFragment"
            app:destination="@id/callFragment"
            app:popUpTo="@id/loginFragment"
            app:popUpToInclusive="true" />
    </fragment>
    <fragment
        android:id="@+id/callFragment"
        android:name="com.kaleyra.demo_collaboration_suite.CallFragment"
        android:label="fragment_call"
        tools:layout="@layout/fragment_call" >
        <action
            android:id="@+id/action_callFragment_to_loginFragment"
            app:destination="@id/loginFragment"
            app:popUpTo="@id/callFragment"
            app:popUpToInclusive="true" />
        <argument
            android:name="userId"
            app:argType="string" />
    </fragment>
</navigation>